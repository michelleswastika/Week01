<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cream">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="140dp"
                app:cardBackgroundColor="@color/beige"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/namaHewan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:text="nama"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/imageView3"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/jenisHewan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="jenis"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/namaHewan"
                        app:layout_constraintTop_toBottomOf="@+id/namaHewan" />

                    <TextView
                        android:id="@+id/usiaHewan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="usia"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/jenisHewan"
                        app:layout_constraintTop_toBottomOf="@+id/jenisHewan" />

                    <Button
                        android:id="@+id/edit"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:text="Edit"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        app:layout_constraintStart_toStartOf="@+id/usiaHewan"
                        app:layout_constraintTop_toBottomOf="@+id/usiaHewan"
                        tools:ignore="TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/delete"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:text="delete"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/edit"
                        app:layout_constraintStart_toEndOf="@+id/edit"
                        app:layout_constraintTop_toTopOf="@+id/edit"
                        tools:ignore="TouchTargetSizeCheck" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="123dp"
                        android:layout_height="119dp"
                        android:layout_marginStart="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/desert" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>